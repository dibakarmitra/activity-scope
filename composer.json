{
    "name": "dibakar/activity-scope",
    "description": "A robust and flexible activity logging system for Laravel Eloquent models with fluent building, auto-actor resolution, and privacy-first features.",
    "keywords": [
        "laravel",
        "activity",
        "scope",
        "activity-log",
        "audit-trail",
        "activity-scope",
        "model-logging",
        "compliance",
        "audit",
        "history"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dibakar Mitra",
            "email": "mitradibakar@outlook.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "phpstan/phpstan": "^1.10|^2.0",
        "larastan/larastan": "^2.0|^2.9|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Dibakar\\ActivityScope\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Dibakar\\ActivityScope\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dibakar\\ActivityScope\\ActivityScopeServiceProvider"
            ],
            "aliases": {
                "ActivityScope": "Dibakar\\ActivityScope\\Facades\\ActivityScope"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "version": "1.0.0"
}